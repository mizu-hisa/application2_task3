  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		  <h1>Editing Book</h1>

          <%= render 'error', new_book: @book %>

          <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

            <div class="form-group">
            <label>Title</label><br>
            <%= f.text_field :title %>
            </div>

            <div class="form-group">
            <label>Opinion</label><br>
            <%= f.text_area :body %><br>
            </div>

              <%= f.submit 'Update Book', class: "btn btn-success" %><br>

                <%= link_to "Show", book_path %>|
                <%= link_to "Back",  books_path %>
                <%end%>
        </div>
      </div>
    </div>