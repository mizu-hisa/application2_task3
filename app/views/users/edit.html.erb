<main>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

    </div>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="col-md-8 offset-md-1">
        <h2>User info</h2>
      <table class="table table-hover table-inverse">
      </table>
      </div>
    </div>
</div>



<% if @user.errors.any? %>
  <%= @user.errors.count %><h4>error prohibited this obj from being saved:</h1>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @user do |f| %>

<div class="form-group">
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
</div>

<div class="form-group">
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  <br>
</div>

<div class="form-group">
  <label for="inputName">Introduction</label><br>
  <%= f.text_area :introduction, autofocus: true%><br>
</div>

  <%= f.submit "Update User", class: "btn btn-secondary" %><br>

<% end %>

</main>


