<main>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'userinfo', user: @user %>
      <%= render 'books/bookstemplate', new_book: @book_new %>

    </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">

          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
           <%@books.each do |book|%>
          <tr>
            <td><%=link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
                <%end%></td>
            <td><%= link_to book.title, book %></td>
            <td><%= link_to book.body, book %></td>
          </tr>
           <%end%>
        </table>
      </div>
    </div>
</main>
